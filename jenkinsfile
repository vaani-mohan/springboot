pipeline {
   agent any

   tools {
      maven "Maven"
   }

   stages {
      stage('Build') {
         steps {
            git 'https://github.com/vaani-mohan/springboot.git'

            // Run Maven on a Unix agent.
            sh "mvn clean package"
        }
      }    
      stage('Test') {
         steps {
            sh "mvn test"
        }    
      }
      stage('Deploy') {
         steps {
            echo "mvn deploy"
        }    
      }
   }
}
